<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Programare"
    tools:showIn="@layout/app_bar_programare">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="400dp"
        android:layout_height="210dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.127">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/cardView2"
            android:layout_alignLeft="@+id/cardView2">

            <TextView
                android:id="@+id/txtSpecializare"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="35dp"
                android:gravity="end"
                android:text="Specializare:"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnSpecializare"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_alignRight="@+id/txtSpecializare"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"></Spinner>


            <TextView
                android:id="@+id/txtData"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_alignBaseline="@+id/editTextData"
                android:layout_alignStart="@+id/txtSpecializare"
                android:layout_alignLeft="@+id/txtSpecializare"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:gravity="end"
                android:text="Data:"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Data"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/txtData"
                android:layout_alignRight="@+id/txtSpecializare"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/date2"></Button>


            <EditText
                android:id="@+id/editTextData"
                android:layout_width="104dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginBottom="69dp"
                android:ems="10"
                android:inputType="date" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/butonVerifica"
        android:layout_width="wrap_content"
        android:layout_height="129dp"
        android:layout_below="@+id/cardView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="145dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:layout_alignTop="@+id/butonVerifica">

            <TextView
                android:layout_width="230dp"
                android:layout_height="46dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="46dp"

                android:layout_marginRight="6dp"
                android:layout_marginBottom="146dp"
                android:paddingRight="3dp"
                android:text="Verifica disponibilitate"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Pentru o programare, completati campurile de mai jos:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butonVerifica" />


</android.widget.RelativeLayout>